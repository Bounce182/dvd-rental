<h1>Dvds</h1>

<table class="listing">
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Language</th>
      <th>Length</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.title %></td>
        <td>
          <%= dvd.genres.map { |genre| genre.title}.join(', ') %>
        </td>
        <td><%= dvd.year %></td>
        <td>
          <%= dvd.languages.map { |language| language.title}.join(', ') %>
        </td>
        <td><%= dvd.length %></td>
        <td>
          <%=
            dvd.users.count
          %>
        </td>
        <td><%= link_to 'Rent', dvd %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
        <td><%= link_to 'Delete', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<%= link_to 'New Dvd', new_dvd_path %>
