<h1>Listing dvds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year</th>
      <th>Lang</th>
      <th>Length</th>
      <th>Rent price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= dvd.title %></td>
        <td><%= dvd.description %></td>
        <td><%= dvd.year %></td>
        <td><%= dvd.lang %></td>
        <td><%= dvd.length %></td>
        <td><%= dvd.rent_price %></td>
        <td><%= link_to 'Show', dvd %></td>
        <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
        <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

