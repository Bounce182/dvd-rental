<!DOCTYPE html>
<html>
<head>
  <title>DvdRentalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="site-container">
    <div id="top-header">
      <div class="slogan">DVD Rental Shop</div>
      <div class="clear"></div>
    </div>
    <div id="content-block">
      <div class="left">
        <div class="menu-container">
          <div class="menu-caption">MAIN MENU</div>
          <ul class="left-menu">
            <li><%= link_to 'Home',root_path %></li>
            <li><%= link_to 'Dvds', dvds_path  %></li>
            <li><%= link_to 'Languages', languages_path  %></li>
            <li><%= link_to 'Genres', genres_path  %></li>
            <li><%= link_to 'Rentals', rentals_path  %></li>
            <li><%= link_to 'Clients', users_path  %></li>
          </ul>
        </div>
      </div>
      <div class="right">
        <% flash.each do |name, msg| %>
            <div class="app-msg"><%= msg %></div>
        <% end %>
        <%= yield %>
      </div>
      <div class="clear"></div>
    </div>
    <div id="footer">
      <div class="footer-text">&copy; DVD Rental Shop, 2014</div>
    </div>
</div>

</body>
</html>
