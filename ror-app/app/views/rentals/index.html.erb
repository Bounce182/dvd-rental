<h1>Listing rentals</h1>

<table>
  <thead>
    <tr>
      <th>Dvd</th>
      <th>User</th>
      <th>Rent date</th>
      <th>Return date</th>
      <th>Total price</th>
      <th>Returned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.dvd_id %></td>
        <td><%= rental.user_id %></td>
        <td><%= rental.rent_date %></td>
        <td><%= rental.return_date %></td>
        <td><%= rental.total_price %></td>
        <td><%= rental.returned %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New rental', new_rental_path %>
